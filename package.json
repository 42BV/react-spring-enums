{
  "name": "@42.nl/react-spring-enums",
  "version": "1.0.0",
  "description": "Sharing enums with a Java Spring Boot back-end.",
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/42BV/react-spring-enums.git"
  },
  "keywords": [
    "Spring",
    "Enum",
    "React"
  ],
  "author": "Maarten Hus",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/42BV/react-spring-enums/issues"
  },
  "homepage": "https://github.com/42BV/react-spring-enums#readme",
  "peerDependencies": {
    "@42.nl/spring-connect": "^3.1.2"
  },
  "devDependencies": {
    "@testing-library/react": "^8.0.4",
    "@types/fetch-mock": "7.2.3",
    "@types/jest": "24.0.11",
    "@types/react": "16.8.20",
    "@types/react-test-renderer": "16.8.2",
    "@typescript-eslint/eslint-plugin": "1.4.2",
    "@typescript-eslint/parser": "1.4.2",
    "@42.nl/spring-connect": "3.1.2",
    "eslint": "5.15.1",
    "eslint-config-react-app": "3.0.7",
    "eslint-plugin-react": "7.12.4",
    "fetch-mock": "7.3.1",
    "husky": "2.4.1",
    "lint-staged": "^9.1.0",
    "jest": "24.8.0",
    "jest-dom": "3.5.0",
    "node-fetch": "2.6.1",
    "prettier": "1.16.4",
    "react": "16.8.6",
    "react-dom": "16.8.6",
    "react-test-renderer": "16.8.6",
    "ts-jest": "24.0.0",
    "typescript": "3.3.4000"
  },
  "scripts": {
    "start": "jest test --watch",
    "test": "npm run lint && jest test --coverage",
    "ts": "tsc --version && tsc",
    "coverage": "npm test -- --coverage",
    "lint": "eslint \"src/**\"",
    "prepublish": "rm -rf lib && npm test && npm run ts"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "node"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "/tests/.*\\.(ts|tsx)$"
  },
  "lint-staged": {
    "{src,tests}/**/*.{js,jsx,json,scss,ts,tsx}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
